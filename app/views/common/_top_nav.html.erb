<%= content_tag :nav, class: 'navbar sticky-top navbar-light bg-faded salayo-nav transparent transparent', data: {transparent: @top_bar_transparent} do %>
  <div class="container">
    <%= link_to root_path, class: 'navbar-brand navbar-item logo-text' do %>
      <%= image_tag('salayo.png', height: 35, id: 'logo', class: 'd-inline-block align-top') %>
      <%= t('website') %>
    <% end %>

    <ul>
      <% if user_signed_in? %>
      <li class="navbar-item">
        <%= link_to(fa_icon('dashboard', text: 'Dashboard'), dashboard_path, class: 'navbar-link') %>
      </li>
      <li class="navbar-item">
        <%= link_to(fa_icon('unlock', text: 'Log out'), destroy_user_session_path, method: :delete, class: 'navbar-link float-right') %>
      </li>
      <% end %>
    </ul>
  </div>
<% end %>
