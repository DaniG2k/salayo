<% {
  notice: 'Excellent!',
  success: 'Excellent!',
  info: 'Heads up!',
  warning: 'Warning!',
  danger: 'Oops!'
}.each do |k, v| %>
  <% if flash[k].present? %>
    <div class="alert alert-<%= k.to_s %> alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= content_tag(:strong, v) %>
      <%= flash[k] %>
    </div>
  <% end %>
<% end %>
