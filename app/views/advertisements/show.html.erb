<% title(@advertisement.title) %>

<div class="dashboard-main-content">
  <div class="container-fluid">
    <div class="row">
      <div class="col">

        <div class="card dashboard-card">
          <div class="card-block">
            <h4 class="card-title"><%= link_to(fa_icon('user', text: "#{@advertisement.user.name} - #{@advertisement.title}"), advertisement_path(@advertisement)) %></h4>
            <%= display_ad_type(@advertisement) %>
            <%= @advertisement.body %>
          </div>

          <div class="card-block">
            <% if @advertisement.pictures.present? %>
              <hr />
              <h3><%= fa_icon('file-image-o', text: 'Uploaded images')%></h3>
              <% @advertisement.pictures.each do |pic| %>
                <%= image_tag pic.image_url, width: '150px' %>
              <% end %>
            <% end %>
          </div>

          <div class="card-footer">
            <small class="text-muted"><%= "Posted on #{@advertisement.created_at}" %></small>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
