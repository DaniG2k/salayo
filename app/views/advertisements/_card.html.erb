<div class="col-md-12 col-lg-6">
  <div class="card dashboard-card">
    <div class="card-block">
      <h4 class="card-title"><%= fa_icon 'user', text: "#{ad.user.name} - #{ad.title}" %></h4>
      <%= display_ad_type(ad) %>
      <%= ad.body %>
    </div>

    <div class="card-block d-flex justify-content-center">
      <% if policy(ad).destroy? %>
        <%= link_to(fa_icon('eye'), advertisement_path(ad), class: 'card-icon-group', data: {toggle: 'tooltip', placement: 'top'}, title: 'Show') %>
        <%= link_to(fa_icon('pencil'), edit_advertisement_path(ad), class: 'card-icon-group', data: {toggle: 'tooltip', placement: 'top'}, title: 'Edit') %>
        <%= link_to(fa_icon('trash'), advertisement_path(ad), class: 'card-icon-group', method: :delete, data: {toggle: 'tooltip', placement: 'top', confirm: 'Are you sure you would like to delete this advertisement?'}, title: 'Delete') %>
      <% else %>
        <%= link_to(fa_icon('eye'), advertisement_path(ad), class: 'card-icon-group', data: {toggle: 'tooltip', placement: 'top'}, title: 'Show') %>
        <%= link_to(fa_icon('paper-plane'), '#', class: 'card-icon-group', data: {toggle: 'tooltip', placement: 'top'}, title: "Message #{ad.user.name}") %>
      <% end %>
    </div>

    <div class="card-footer">
      <small class="text-muted"><%= "Posted #{time_ago_in_words(ad.created_at)} #{t('time.ago')}" %></small>
    </div>
  </div>
</div>
