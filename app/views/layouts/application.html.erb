<!DOCTYPE html>
<html lang="<%= user_locale %>">
  <head>
    <%= content_tag :title, (content_for?(:title) ? yield(:title) : "#{t('website')} | #{t('slogan')}") %>
    <%= csrf_meta_tags %>
    <%= render 'common/meta_tags' %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= render 'common/top_nav' %>
    <%= yield %>
    <%= render 'common/footer' %>
  </body>
</html>
