<div class="card dashboard-card">
  <div class="card-block">
    <h4 class="card-title"><%= user.name %></h4>
    This is some text within a card block.
  </div>

  <div class="card-block d-flex justify-content-center">
    <%= link_to(fa_icon('eye'), user_path(user), class: 'card-icon-group', data: {toggle: 'tooltip', placement: 'top'}, title: 'Show') %>
    <%# link_to(fa_icon('pencil'), edit_user_path(user), class: 'card-icon-group', data: {toggle: 'tooltip', placement: 'top'}, title: 'Edit') %>
    <%= link_to(fa_icon('trash'), user_path(user), class: 'card-icon-group', method: :delete, data: {toggle: 'tooltip', placement: 'top', confirm: 'Are you sure you would like to delete this user?'}, title: 'Delete') %>
  </div>

  <div class="card-footer">
    <small class="text-muted">Added <%= "#{time_ago_in_words(user.created_at)} #{t('time.ago')}" %></small>
  </div>
</div>
