<% title('Roommates') %>

<div class="dashboard-main-content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <h1><%= fa_icon('users', text: 'Roommates') %></h1>

        <% @advertisements.each do |ad| %>
          <div class="col">
            <div class="card dashboard-card">
              <div class="card-block">
                <h4 class="card-title"><%= fa_icon('user', text: ad.user.name) %></h4>
                <%= ad.body %>
              </div>

              <div class="card-footer">
                <small class="text-muted">Posted <%= time_ago_in_words(ad.created_at) %> ago</small>
              </div>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
