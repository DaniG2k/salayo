<% title t('.title') %>

<section class="gray-tiles-section">

  <div class="container">
    <h2 class="text-center blue"><%= t('.title') %></h2>
    <%= form_for(@message, url: create_message_url) do |f| %>

      <div class="row justify-content-center">
        <div class="col-lg-6 col-md-12">
          <%= render 'common/notices' %>
          <%= render partial: 'common/form_errors', locals: {obj: @message} %>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-lg-3 col-md-6">
          <div class="form-group">
            <%= f.text_field :name, placeholder: t('.name'), class: 'form-control' %>
          </div>
        </div>
        <div class="col-lg-3 col-md-6">
          <div class="form-group">
            <%= f.email_field :email, placeholder: t('.email'), class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="row justify-content-center">
        <div class="col-lg-6 col-md-12">
          <div class="form-group">
            <%= f.text_area :body, placeholder: t('.message'), class: 'form-control' %>
          </div>

          <%= f.button fa_icon('send', text: t('.send')), type: 'submit', class: 'btn btn-primary', data: {disable_with: 'Submitting...'} %>
        </div>
      </div>

    <% end %>
  </div>
</section>
