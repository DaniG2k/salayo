<%= form_for(listing) do |f| %>
  <% if listing.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong><%= pluralize(listing.errors.count, 'error') %>
      prohibited this listing from being saved:</strong>
      <ul>
        <% listing.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h2>Basics</h2>
  <div class="row">
    <div class="col">
      <div class="form-group">
        <strong><%= f.label :name %></strong><br>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="form-group">
        <strong><%= f.label :property_type %></strong><br>
        <%= f.select(:property_type, options_for_select(Listing::PROPERTY_TYPES.map {|type| [type.titleize, type]}, listing.property_type), class: 'form-control') %>
      </div>
    </div>
  </div>

  <h2>Location</h2>

  <div class="row">
    <div class="col">

      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="map_search" id="map_search_address" value="address" checked>
          Search by address
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="radio" name="map_search" id="map_search_coords" value="coords">
          Search by coordinates
        </label>
      </div>

    </div>
  </div>

  <fieldset name="address">
    <div class="row">
      <div class="col-6">
        <div class="form-group">
          <strong><%= f.label :city %></strong><br>
          <%= f.text_field :city, class: 'form-control' %>
        </div>
      </div>
      <div class="col-6">
        <div class="form-group">
          <strong><%= f.label :state %></strong><br>
          <%= f.text_field :state, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="form-group">
          <strong><%= f.label :address %></strong><br>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset name="coords" disabled>
    <div class="row">
      <div class="col-6">
        <div class="form-group">
          <strong><%= f.label :lat, 'Latitude' %></strong><br>
          <%= f.number_field :lat, in: -90.0..90.0, step: :any, class: 'form-control' %>
        </div>
      </div>
      <div class="col-6">
        <div class="form-group">
          <strong><%= f.label :lng, 'Longitude' %></strong><br>
          <%= f.number_field :lng, in: -180.0..180.0, step: :any, class: 'form-control' %>
        </div>
      </div>
    </div>
  </fieldset>

  <div class="row">
    <div class="col-12">
      <div class="form-group">
        <strong>Map</strong><br>
        <div id="map-container">
          <div id='location-map'></div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <div class="actions">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>

<script>ListingForm.init();</script>
