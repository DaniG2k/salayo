<% title('Add listing') %>

<div class="dashboard-main-content">
  <div class="container-fluid" id="vue-listing">
    <h1><%= fa_icon('plus', text: 'Add listing') %></h1>

    <div class="row">
      <div class="col">
        <!-- progressbar -->
      	<ul class="text-center" id="listing-progressbar">
          <step-item v-for="(item, idx) in stepList"
              :step="item"
              :key="item.id"
              :active="idx <= activeStep">
          </step-item>
      	</ul>

      </div>
    </div>

    <div class="row">
      <div class="col text-center">
        <%= render 'prev_next_buttons' %>
      </div>
    </div>

    <%= render 'form', listing: @listing %>

  </div>
</div>

<script>ListingForm.init();</script>
