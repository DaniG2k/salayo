<% title(@listing.name) %>

<div class="dashboard-main-content">
  <div class="container-fluid">
    <h1><%= @listing.name %></h1>
    <strong>Property type:</strong> <%= @listing.property_type %><br />
    <strong>Address:</strong> <%= "#{@listing.address}, #{@listing.city}, #{@listing.state}" %><br />
    <strong>Amenities:</strong>
    <ul>
      <% @listing.amenities.each do |amenity| %>
        <li><%= amenity %></li>
      <% end %>
    </ul>
    <%= link_to fa_icon('pencil', text: 'Edit listing'), edit_listing_path(@listing) %>

    <hr />
    <h3>Add images</h3>
    <%= form_for [@listing, Picture.new], :html => {id: 'picture-dropzone', class: :dropzone, multipart: true} do |f| %>
      <%= f.hidden_field :image %>
    <% end %>

    <hr />
    <h3>Uploaded images</h3>
    <% @listing.pictures.each do |pic| %>
      <%= image_tag pic.image_url, width: '150px' %>
    <% end %>
  </div>
</div>
