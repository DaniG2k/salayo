<div class="card dashboard-card">
  <% if listing.pictures.present? %>
    <%= link_to listing_path(listing) do %>
      <%= image_tag(listing.pictures.first.image.card.url, class: 'card-img-top') %>
    <% end %>
  <% end %>

  <div class="card-body text-center">
    <h4 class="card-title"><%= listing.name %></h4>
    This is some text within a card block.
  </div>

  <div class="card-block d-flex justify-content-center">
    <%= link_to(fa_icon('eye'), listing_path(listing), class: 'card-icon-group', data: {toggle: 'tooltip', placement: 'top'}, title: 'Show') %>
    <%= link_to(fa_icon('pencil'), edit_listing_path(listing), class: 'card-icon-group', data: {toggle: 'tooltip', placement: 'top'}, title: 'Edit') %>
    <%= link_to(fa_icon('trash'), listing_path(listing), class: 'card-icon-group', method: :delete, data: {toggle: 'tooltip', placement: 'top', confirm: 'Are you sure you would like to delete this listing?'}, title: 'Delete') %>
  </div>

  <div class="card-footer">
    <small class="text-muted">Added <%= "#{time_ago_in_words(listing.created_at)} #{t('time.ago')}" %></small>
  </div>
</div>
