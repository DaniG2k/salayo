<section class="how-it-works">

  <div class="container">
    <div class="row">
      <div class="col">
        <h2 class="text-center blue">
          <%= t('.three_steps') %>
        </h2>
      </div>
    </div>
  </div>

  <div class="timeline">
    <div class="timeline-string">
      <div class="container">
        <div class="row text-center point reverse">
          <div class="dot"></div>
          <div class="col">
            <h4 class="magenta">Sign up</h4>
            <p>
              Create a new account with <%= t('website') %>. If you have an accommodation, register as a listing owner and post your listing's details.
            </p>
          </div>
          <div class="col">
            <%= inline_svg('how01.svg', width: '350px', height: '350px') %>
          </div>
        </div>

        <div class="row text-center point">
          <div class="dot"></div>
          <div class="col">
            <h4 class="magenta">Register your preferences</h4>
            <p>
              Search apartments by map or by criteria.
              If you are looking for roommates, search for others who are also in search of a roommate and buddy up to split the deposit or rent.
            </p>
          </div>
          <div class="col">
            <%= inline_svg('how02.svg', width: '350px', height: '350px') %>
          </div>
        </div>

        <div class="row text-center point reverse">
          <div class="dot"></div>
          <div class="col">
            <h4 class="magenta">Find an accommodation</h4>
            <p>
              Get in touch with a landlord who speaks your language. Alternatively, get matched with potential roommates who fit your criteria.
            </p>
          </div>
          <div class="col">
            <%= inline_svg('how03.svg', width: '350px', height: '350px') %>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="timeline-sm">
    <div class="container">
      <div class="row text-center">

        <div class="col">
          <h4 class="magenta">Sign up</h4>
	  <%= inline_svg('how01.svg', width: '250px', height: '250px') %>
          <p>
            Create a new account with <%= t('website') %>. If you have an accommodation, register as a listing owner and post your listing's details.
          </p>
        </div>
      </div>

      <div class="row text-center">
        <div class="col">
          <h4 class="magenta">Register your preferences</h4>
          <%= inline_svg('how02.svg', width: '250px', height: '250px') %>
          <p>
            Search apartments by map or by criteria.
            If you are looking for roommates, search for others who are also in search of a roommate and buddy up to split the deposit or rent.
          </p>
        </div>
      </div>

      <div class="row text-center">
        <div class="col">
          <h4 class="magenta">Find an accommodation</h4>
          <%= inline_svg('how03.svg', width: '250px', height: '250px') %>
          <p>
            Get in touch with a landlord who speaks your language. Alternatively, get matched with potential roommates who fit your criteria.
          </p>
        </div>
      </div>

    </div>
  </div>

</section>
